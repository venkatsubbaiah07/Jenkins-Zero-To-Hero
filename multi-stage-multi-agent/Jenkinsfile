pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
  stage('Checkout') {
            steps {
              node {         // <-- wrap steps in a node block
                    checkout scm
                }
            }
        }
  stage('Compile') {
    agent {
        docker {
            image 'eclipse-temurin:21-jdk'
        }
    }
    steps {
        sh 'javac HelloWorld.java'
    }
}

stage('Run using Docker') {
    agent any
    steps {
        sh '''
          docker run --rm \
            -v "$PWD":/app \
            -w /app \
            eclipse-temurin:21-jdk \
            java HelloWorld
        '''
    }
}
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
