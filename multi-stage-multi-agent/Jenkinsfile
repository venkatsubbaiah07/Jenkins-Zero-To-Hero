pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Compile Java') {
            agent {
                label 'java-build'
            }
            steps {
                sh '''
                  javac HelloWorld.java
                '''
            }
        }

        stage('Run Java') {
            agent {
                label 'java-run'
            }
            steps {
                sh '''
                  java HelloWorld
                '''
            }
        }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
